<div id="creators" class="creators creators-section shopify-section_inner">
  <style>
    .index-section.creators {
    	background-color: {{section.settings.bg_color}};
    }
  </style>
  {% if section.settings.title != blank %}
      <h2 class="section-header section-title">{{ section.settings.title | escape }}</h2>
  {% endif %}
  {% if section.settings.description != blank %}
      <h3 class="creators-section__description description">{{ section.settings.description | escape }}</h3>
  {% endif %}
  {%- assign collection = collections['video-editors'] -%}
  <div class= "products-wrapper flex desktop">
    {% for product in collection.products limit:6 %}
    {%- assign nameArr = product.title | remove: "." | downcase | split: " " -%}
  		<div class="product-card">
           <a href='/products/{{nameArr | join: "-"}}' class='product-card__hover-link'></a>
          <div class="product-card__top">
          	<div class='img'><img data-src="{{product.featured_image| img_url: '160x160', scale: 2}}" class="lazyload"></div>
          	<div class='tags-wrapper'>
          	{% for tag in product.tags limit:3 %}
              {% if forloop.index == 1 %}
              <div class="first_level">
              {% endif %}  
                <a style="z-index:40;" class="tag" href="/search?q={{tag | replace: '&', '%26' }}%2C+&options%5Bprefix%5D=last">{{tag}}</a>
              {% if forloop.index == 2 %}
              </div>
              {% endif %}
            {% endfor %}
          </div>
          </div>
          <p class='name'>{{ product.title }}</p>
          {%- assign nameArr = product.title | remove: "." | downcase | split: " " -%}
          <a href='/products/{{nameArr | join: "-"}}' class='btn'>View resume</a>
       </div>
	{% endfor %}
  </div>
   <div class="side-wrappper mobile" data-slick='{"dots": true, "arrows": false}'>
  	   {% for product in collection.products limit:6 %}
     {%- assign nameArr = product.title | remove: "." | downcase | split: " " -%}
        <div class="product-card slide">
           <a href='/products/{{nameArr | join: "-"}}' class='product-card__hover-link'></a>
          <div class="product-card__top">
          	<div class='img'><img data-src="{{product.featured_image| img_url: '160x160', scale: 2}}" class="lazyload"></div>
          	<div class='tags-wrapper'>
          	{% for tag in product.tags limit:3 %}
              {% if forloop.index == 1 %}
              <div class="first_level">
              {% endif %}  
                <a style="z-index:40;" class="tag" href="/search?q={{tag | replace: '&', '%26' }}%2C+&options%5Bprefix%5D=last">{{tag}}</a>
              {% if forloop.index == 2 %}
              </div>
              {% endif %}
            {% endfor %}
          </div>
          </div>
          <p class='name'>{{ product.title }}</p>
          <a href='/products/{{nameArr | join: "-"}}' class='btn'>View resume</a>
          
        </div>
      {% endfor %}
  </div>
   {%- if section.settings.button_link != blank -%}
      <div class="button-wrapper">
        <a class="button button--basic" href="{{section.settings.button_link}}" aria-label="{{section.settings.button_link}}">
        {{section.settings.button_label}}
        </a>
        </div>
      {%- endif -%}
</div>

  {% javascript %}
   $(document).ready(function() {
	 $('.side-wrappper').slick({
		infinite: true,
		speed: 500,
		slidesToShow: 1,
     	arrows: false,
		slidesToScroll: 1
 	});
 });
{% endjavascript %}

{% schema %}
  {
    "name": "Creators",
	"class": "index-section creators",
    "settings": [
{
	"type": "color",
    "id": "bg_color",
    "label": "Background color",
     "default": "#fff"
	},		
{
		"type": "text",
     	"id": "title",
      	"label": "Heading",
		"default": "Content Help"
    },
	{
		"type": "text",
     	"id": "description",
      	"label": "Description",
		"default": "Description Content"
    },
	 {
      "type": "text",
      "id": "button_label",
      "label": "Button label"  
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link" 
    }
	],
"blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "label": "Collection",
          "id": "collection",
          "type": "collection"
        }
      ]
    }
  ],
	"presets": [
      {
        "category": "Custom Content",
        "name": "Creators"
		}]
  }
{% endschema %}
