<section id="sm-fourth">

    <div class="page-width">
        <h2 class="section-heading mobile">{{ section.settings.heading }}</h2>
        <div class="doubleside-wrapper">
            <div class="left">
                <h2 class="section-heading desktop-element" style="text-align: left!important;">{{ section.settings.heading }}</h2>
                <h5 class="section-text">{{ section.settings.text }}</h5>
            </div>
            <div class="side-img-right"><img src="{{ section.settings.sm-sec-img2 | img_url: "master" }}" alt="img"></div>
        </div>
    </div>

</section>
    
    {% schema %}
      {
        "name": "SM 1st section",
        "settings": [
        {
          "type": "image_picker",
          "id": "sm-sec-img2",
          "label": "Image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
            },
            {
            "type": "richtext",
            "id": "text",
            "label": "Subheading"
            }
        ]
      }
    {% endschema %}
    
    {% stylesheet %}
    {% endstylesheet %}
    
    {% javascript %}
    {% endjavascript %}
    