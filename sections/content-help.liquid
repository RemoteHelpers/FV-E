<div id="contact-help" class="contact-help shopify-section_inner">
  <style>
   .index-section.contentHelp::before{
      border-left: 100vw solid {{ section.settings.bg_color}};
      border-top: 0vw solid {{ section.settings.bg_color}};
    }
  </style>
  {% if section.settings.title != blank %}
      <h2 class="section-header section-title">{{ section.settings.title | escape }}</h2>
  {% endif %}
  {% if section.settings.description != blank %}
      <h3 class="help-description dedescription">{{ section.settings.description | escape }}</h3>
  {% endif %}
  
  {% if section.blocks.size > 0 %}
    <ul class="item-wrapper flex">
      {% for block in section.blocks %}
        <li class="item">
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="logo-bar__link">
          {% endif %}
          {% if block.settings.image != blank %}
              {%- assign img_url = block.settings.image | img_url: '160x160', scale: 2  -%}	
          <img class="item__image lazyload"
               data-src="{{ img_url }}"
		  >
            {% else %}
            {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
          {% if block.settings.item_title != blank %}
              <div class="item_title">{{block.settings.item_title}}</div>
          {% endif %}
          {% if block.settings.link != blank %}
            </a>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  {% endif %}
</div>   

{% schema %}
  {
    "name": "Content Help",
	"class": "index-section contentHelp",
    "settings": [
{
	"type": "color",
    "id": "bg_color",
    "label": "Background color",
     "default": "#fff"
	},	
{
		"type": "text",
     	"id": "title",
      	"label": "Heading",
		"default": "Content Help"
    },
	{
		"type": "text",
     	"id": "description",
      	"label": "Description",
		"default": "Description Content"
    }
	],
    "blocks": [
      {
        "type": "item_image",
        "name": "item",
		"settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
   		},
		{
          "type": "url",
          "id": "link",
          "label": "Link",
		  "info": "Optional"
		},
		{	
          "type": "text",
          "id": "item_title",
          "label": "Item title",
          "default": "Item title"
		}
      ]
	 }
	],
	"presets": [
      {
        "category": "Custom Content",
        "name": "Content Help",
 		"blocks": [
          {
            "type": "item_image"
          },
          {
            "type": "item_image"
          },
          {
            "type": "item_image"
          }
      	]
      }
    ]
  }
{% endschema %}
