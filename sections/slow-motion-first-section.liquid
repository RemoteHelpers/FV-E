<section id="sm-first">

    <div class="page-width">
        <div class="double-wrapper">
            <div class="left">
                <h2 class="banner-heading">{{ section.settings.heading }}</h2>
                <h5 class="banner-subheading">{{ section.settings.subheading }}</h5>
                <div class="button">
                    <div class="btn media-text__btn">
                        <a href="{{ section.settings.btn-link }}" class="btn__link">{{ section.settings.btn-linktext }}</a>
                        <svg class="ve-btn-hover__star1">
                            <use height="33px" width="28px" xlink:href="#star-svg"></use>
                        </svg>
                        <svg class="ve-btn-hover__star2">
                            <use height="14px" width="11px" xlink:href="#star-svg"></use>
                        </svg>
                        <svg class="ve-btn-hover__star3">
                            <use height="20px" width="17px" xlink:href="#star-svg"></use>
                        </svg>
                    </div>
                </div>
            </div>
            <div class="banner-img-right"><img src="{{ section.settings.sm-sec-img | img_url: "master" }}" alt="img"></div>
        </div>
    </div>

</section>
    
    {% schema %}
      {
        "name": "SM 1st section",
        "settings": [
        {
          "type": "image_picker",
          "id": "sm-sec-img",
          "label": "Banner image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
            },
            {
            "type": "richtext",
            "id": "subheading",
            "label": "Subheading"
            },
            {
              "id": "btn-link",
              "type": "url",
              "label": "Button link"
              },
              {
              "id": "btn-linktext",
              "type": "text",
              "label": "Button text",
              "default": "Click Here"
              }
        ]
      }
    {% endschema %}
    
    {% stylesheet %}
    {% endstylesheet %}
    
    {% javascript %}
    {% endjavascript %}
    