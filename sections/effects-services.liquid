<section class="services section">
  <div class="container">
    <h2 class="section-title">{{ section.settings.services_title }}</h2>
    <div class="services__wrapper">
      {% for block in section.blocks %}
      <div class="services__card">
        <img src="{{ block.settings.card_image | img_url: 'master' }}" alt="">
        <p class="basic-text">{{ block.settings.card_title }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Services",
  
  "settings": [
      {
        "type": "text",
        "id": "services_title",
        "label": "Services title"
      }
  ],
  "blocks": [
      {
        "type": "image",
        "name": "images",
        "settings": [
          {
            "type": "image_picker",
            "id": "card_image",
            "label": "Card image"
          },
          {
            "type": "text",
            "id": "card_title",
            "label": "Card title",
            "default":"Item title"
          }
        ]
      }
  ],
  "presets": [
      {
        "name": "Services",
        "category": "card"
      }
  ]
} 
{% endschema %}