<section class="video-types section">
  <div class="container">
    <h2 class="section-title">{{ section.settings.video_title }}</h2>
    <div class="video-types__card-wrapper">
      {% for block in section.blocks %}
        <div class="video-types__card sub-card">
          {% if block.settings.card_image != blank %}
          <img src="{{ block.settings.card_image | img_url: 'master' }}" alt="">
          {% endif %}
          <div class="video-types__content">
            {% if block.settings.card_title != blank %}
            <h3 class="card-title">{{ block.settings.card_title }}</h3>
            {% endif %}
            {% if block.settings.card_text != blank %}
            <p class="card-text">{{ block.settings.card_text }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Video types",
  
  "settings": [
      {
        "type": "text",
        "id": "video_title",
        "label": "Video title"
      }
  ],
  "blocks": [
      {
        "type": "image",
        "name": "images",
        "settings": [
          {
            "type": "image_picker",
            "id": "card_image",
            "label": "Card image"
          },
          {
            "type": "text",
            "id": "card_title",
            "label": "Card title",
            "default":"Item title"
          },
          {
            "type": "text",
            "id": "card_text",
            "label": "Card text",
            "default":"Item text"
          }
        ]
      }
  ],
  "presets": [
      {
        "name": "Video types",
        "category": "card"
      }
  ]
} 
{% endschema %}