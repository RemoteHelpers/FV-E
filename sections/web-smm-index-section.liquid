<section class="web-smm-section index-section video_text">
    <div class="text">
        <h1>
            {{ section.settings.h1 }}
        </h1>
        <h3>
            {{ section.settings.h3 }}
        </h3>
        {%- if section.settings.button_link != blank -%}
        <div class="button-wrapper">
            <a class="star-btn btn btn-link" href="{{section.settings.button_link}}"
                aria-label="{{section.settings.button_link}}">
                {{section.settings.button_label}}
            </a>
            <div class="star-wrapper">
                <div class="star-w star-1">
                    {% include "star-img" %}
                </div>
                <div class="star-w star-2 star-2--bigbtn">
                    {% include "star-img" %}
                </div>
                <div class="star-w star-3">
                    {% include "star-img" %}
                </div>
            </div>
        </div>
        {%- endif -%}
    </div>
    <div class="custom__item video_item video-wrapper">
        <div id="video_holder">
            <div id="overlay"></div>
            <video poster="{{ section.settings.video_image_bg | img_url: "master" }}" id="video">
                <source src="{{section.settings.video_link}}" width="400" height="200" type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"' />          
            </video>
        </div>
    </div>
</section>
{% schema %}
{
"name": "Web Smm Index Section",

"settings": [
{
"type": "text",
"id": "h1",
"label": "H1"
},
{
"type": "text",
"id": "h3",
"label": "H3"
},
{
"type": "url",
"id": "button_link",
"label": "Button Link"
},
{
"id": "video_link",
"type": "url",
"label": ".mp4 video link"
},
{
"type": "text",
"id": "button_label",
"label": "Button label"
},
{
"type": "image_picker",
"id": "video_image_bg",
"label": "Background video Image"
}
],
"presets": [
      {
        "category": "Custom Content",
        "name": "Video with text"
      }
    ]
}
{% endschema %}