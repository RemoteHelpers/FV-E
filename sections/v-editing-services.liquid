{% comment %}  {% endcomment %}
<section class="services section">
  <div class="container">
    <div class="services__wrapper">
      <div class="services__image-holder">
        <img src="{{ section.settings.services_image | img_url: 'master' }}" alt="">
      </div>
      <div class="services__content">
        <h2 class="section-title section-title--left">{{ section.settings.services_title }}</h2>
        <p class="basic-text">{{ section.settings.services_text }}</p>
        <div class="button-wrapper">
          <a href="{{ section.settings.btn_url }}" class="button btn star-btn">{{ section.settings.link_text }}</a>
          <div class="star-wrapper">
            <div class="star-w star-1">
              {% include "star-img" %}
            </div>
            <div class="star-w star-2 star-2--bigbtn">
              {% include "star-img" %}
            </div>
            <div class="star-w star-3">
              {% include "star-img" %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
    {
      "name": "Services",
      
      "settings": [
          {
            "type": "image_picker",
            "id": "services_image",
            "label": "Services Image"
          },
          {
            "type": "text",
            "id": "services_title",
            "label": "Services title"
          },
          {
            "type": "text",
            "id": "services_text",
            "label": "Services text",
            "default":"Services text"
          },
          {
            "type": "text",
            "id": "link_text",
            "label": "Link text"
          },
		  {
        	"type": "url",
        	"id": "btn_url",
      	  	"label": "URL"
      	  }
      ]
    } 
{% endschema %}