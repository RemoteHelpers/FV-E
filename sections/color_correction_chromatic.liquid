    <section class="chromatic" style ="background-image: url({{ section.settings.bg_img | img_url: "master" }});" >
       
        <div class="container">
            <div class="chromatic-wrapper">
               
                <div class="chromatic-info">
                    <h2 class="chromatic-info__title title">{{ section.settings.chromatic_title }}</h2>
                        <div class="chromatic-bg">
                            <img src="{{ section.settings.chromatic_imagemob | img_url: 'master' }}" alt="" class="chromatic-bg__img">
                        </div>
                  
                  {% for block in section.blocks %}
                    <p class="chromatic-info__text text">{{block.settings.chromatic_text}} </p>
                   
                  {% endfor %}  
                  
                  <div class="btn-chromatic"><a href="{{ section.settings.link }}" class="chromatic-info__button button">{{ section.settings.link_text }}</a></div>
                </div>
                
            </div>
        </div>
    </section>


{% schema %}
{
  "name": "chromatic",
  
  "settings": [
  
      {
        "type": "text",
        "id": "chromatic_title",
        "label": "Second section title"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link text"
      },
      {
        "type": "image_picker",
        "id": "bg_img",
        "label": "Second section image"
      },
      {
        "type": "image_picker",
        "id": "chromatic_imagemob",
        "label": "Second section image mob"
      },
{
        "type": "url", 
        "id": "link",
        "label": "Link for button"
      }
  ],
	  "blocks": [
      {
        "type": "text",
        "name": "Paragraphs",
        "settings": [
        
          {
            "type": "text",
            "id": "chromatic_text",
            "label": "Second section paragraphs",
            "default":"Paragraph"
          }

        
        ]
      }
  ]

  } 
{% endschema %}

