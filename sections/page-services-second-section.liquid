<div class="page-width">
  <svg style="display: none;">
    <symbol id="star-svg" viewBox="0 0 29 33">
      <g>
        <path
          d="M14.412 0L15.5141 10.102C15.7684 12.7117 17.7183 14.8163 20.2616 15.3214L28.1458 16.8367L20.855 17.5102C17.9726 17.7628 15.7684 20.0357 15.4293 22.8138L14.412 33L13.3947 22.898C13.1404 20.0357 10.8514 17.8469 7.969 17.5944L0 16.8367L8.22332 15.4056C10.7666 14.9847 12.8013 12.8801 13.0556 10.2704L14.412 0Z"
          fill="#F13F00" />
      </g>
    </symbol>
  </svg>
  
<div class="containersec2">
    <div class="row">
        <div class="content col-sm-6">
             	<div class="row">
                  <div class="heading col-sm-12"><h1 class="heading-sec2">{{ section.settings.heading }}</h1></div>
                  <div class="subtitle col-sm-12"><p class="subtext-sec2">{{ section.settings.sub-text2 }}</p></div>

            <div class="button col-sm-12">
              <div class="btn media-text__btn">
              <a href="{{ section.settings.btn-sec2 }}" class="btn__link">{{ section.settings.btn-linktext }}</a>
              <svg class="ve-btn-hover__star1">
                <use height="33px" width="28px" xlink:href="#star-svg"></use>
              </svg>
              <svg class="ve-btn-hover__star2">
                <use height="14px" width="11px" xlink:href="#star-svg"></use>
              </svg>
              <svg class="ve-btn-hover__star3">
                <use height="20px" width="17px" xlink:href="#star-svg"></use>
              </svg>
              </div>
            </div>
        		</div>
      </div>
        <div class="image col-sm-6"><img data-src="{{ section.settings.image | img_url: "master" }}" class="lazyload second-section-img" ></div>
    </div>
</div>
</div>

{% schema %}
{
    "name": "Services: 2 section",

    "settings": [
                  {
					"type": "image_picker",
					"id": "image",
