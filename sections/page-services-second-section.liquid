                    "id": "btn-linktext",
                    "type": "text",
                    "label": "Button text",
                    "default": "Click Here"
                  }

				],

 	"presets": [
    {
      "name": "VE-Services-2",
      "category": "Video editors"
      }
]
}
{% endschema %}

{% stylesheet %}

.containersec2 .btn {
  font-family: 'Raleway', sans-serif;
  position: relative;
  height: 55px;
  width: 300px;
  padding: 13px 0;

  background-color: #F13F00;

  border: 2px solid transparent;
  border-radius: 33px;

  transition: background-color 0.3s ease;
}

.containersec2 .btn__link {
  color: #fff;
  font-size: 19px;
  font-style: normal;
  font-weight: 800;
  line-height: 25px;
  letter-spacing: 0.03em;
  text-align: center;

}

.containersec2 .btn__link:hover {
  color: #fff;
}

/* Hover button */

.containersec2 .ve-btn-hover__star1 {
  height: 30px;
  position: absolute;
  top: -36%;
  left: 100%;

  transition: visibility 2s, opacity 1s linear;
}

.containersec2 .ve-btn-hover__star2 {
  height: 30px;
  position: absolute;
  top: 16%;
  left: 106%;
  transition: visibility .6s, opacity 1.5s linear;
}

.containersec2 .ve-btn-hover__star3 {
  height: 30px;
  position: absolute;
  left: -4%;
  top: 85%;
  transition: visibility 1.2s, opacity 1s linear;
}

.containersec2 .btn__link:hover {
  color: #fff;
}

.containersec2 .btn:hover {
  background-color: #fb4200;
}


.containersec2 .btn svg {
  visibility: hidden;
  opacity: 0;
}

.containersec2 .btn:hover svg {
  visibility: visible;
  opacity: 1;
}

.ve-btn-hover__star1 {
  height: 30px;
  position: absolute;
  top: -36%;
  left: 100%;

  transition: visibility 2s, opacity 1s linear;
}

.ve-btn-hover__star2 {
  height: 30px;
  position: absolute;
  top: 16%;
  left: 106%;

  transition: visibility .6s, opacity 1.5s linear;
}

.ve-btn-hover__star3 {
  height: 30px;
  position: absolute;
  left: -8%;
  top: 80%;

  transition: visibility 1.2s, opacity 1s linear;
}

 


