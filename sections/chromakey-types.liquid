<section class="types">
  <div class="container">
    <h2 class="section-title">{{ section.settings.types_title }}</h2>
    <div class="types__wrapper">
      {% for block in section.blocks %}
        <div class="types__card">
          {% if block.settings.card_image != blank %}
          <img class="card-image" src="{{ block.settings.card_image | img_url: 'master' }}" alt="">
          {% endif %}
          {% if block.settings.card_text != blank %}
          <p class="card__text">{{ block.settings.card_text }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "types",
  
  "settings": [
      {
        "type": "text",
        "id": "types_title",
        "label": "Types title"
      }
  ],
  "blocks": [
      {
        "type": "image",
        "name": "images",
        "settings": [
          {
            "type": "image_picker",
            "id": "card_image",
            "label": "Card image"
          },
          {
            "type": "text",
            "id": "card_text",
            "label": "Card text",
            "default":"Item title"
          }
        ]
      }
  ],
  "presets": [
      {
        "name": "types",
        "category": "card"
      }
  ]
} 
{% endschema %}