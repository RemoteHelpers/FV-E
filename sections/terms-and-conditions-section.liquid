<div class="tabs"><button onclick="" class="tab tab1 tab-active">Terms & Conditions</button><button onclick="" class="tab tab2">Privacy Policy</button></div>
<div class="content-block">
{% for block in section.blocks %} 
  {% if block.type == 'block-1' %}
  <div class="terms-and-conditions">
    <h2 class="heading">{{block.settings.title | upcase}}</h2>
    <div class="paragraph-content">{{block.settings.content}}</div>
  </div>
  {%endif%}
  {% if block.type == 'block-2' %}
  <div class="terms-and-conditions">
    <h2 class="heading">{{block.settings.title | upcase}}</h2>
    <p class="company-name">{{block.settings.company_name}}</p>
    <div class="paragraph-content"><p>{{block.settings.house_number}}, {{block.settings.street}}</p> </div>
    <div class="paragraph-content"><p>{{block.settings.city}}, {{block.settings.post_code}} </p></div>
    <div class="paragraph-content"><p>{{block.settings.country}} </p></div>
    <p>{{block.settings.adress}}</p>
    <div><a class="tel" href="tel:{{block.settings.phone}}">{{block.settings.phone}}</a></div>
    <div class="mailto"><a class="mailto" href="mailto:{{block.settings.email}}">{{block.settings.email}}</a></div>
  </div>
  {% endif %}
  {% if block.type == 'block-3' %}
  <div class="privacy-policy">
    <h2 class="heading">{{block.settings.privacy_title | upcase}}</h2>
    <div class="paragraph-content">{{block.settings.privacy_content}}</div>
</div>
{% endif %}
{% if block.type == 'block-4' %}
<div class="privacy-policy">
  <h2 class="heading">{{block.settings.title | upcase}}</h2>
  <div class="paragraph-content"><p>{{block.settings.words}}</p></div>
  <p class="company-name">{{block.settings.company_name}}</p>
  <div class="paragraph-content"><p>{{block.settings.house_number}}, {{block.settings.street}}</p> </div>
  <div class="paragraph-content"><p>{{block.settings.city}}, {{block.settings.post_code}} </p></div>
  <div class="paragraph-content"><p>{{block.settings.country}} </p></div>
  <p>{{block.settings.adress}}</p>
  <div><a class="tel" href="tel:{{block.settings.phone}}">{{block.settings.phone}}</a></div>
  <div class="mailto"><a class="mailto" href="mailto:{{block.settings.email}}">{{block.settings.email}}</a></div>
</div>
{% endif %}
{% endfor %}
</div>

