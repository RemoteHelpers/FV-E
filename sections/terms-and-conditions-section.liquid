<script>
  const tabBtn1 = document.querySelector(".tab1");
  const tabBtn2 = document.querySelector(".tab2");
  const terms = document.querySelectorAll(".terms-and-conditions");
  const privacy = document.querySelectorAll(".privacy-policy");
  console.log(terms);

  tabBtn1.addEventListener('click', function () {
    tabBtn2.classList.remove("tab-active");
    tabBtn1.classList.add("tab-active");
    for (let i = 0; i < terms.length; i++) {
    terms[i].classList.remove('hidden');
    }
    for (let i = 0; i < privacy.length; i++) {
      privacy[i].classList.add('hidden');
    }
  })

  tabBtn2.addEventListener('click', function () {
    tabBtn1.classList.remove("tab-active");
    tabBtn2.classList.add("tab-active");
    for (let i = 0; i < privacy.length; i++) {
      privacy[i].classList.remove('hidden');
    }
    for (let i = 0; i < terms.length; i++) {
      terms[i].classList.add('hidden');
    }
  })

  function hidePrivacyContent () {
    for (let i = 0; i < terms.length; i++) {
    terms[i].classList.remove('hidden');
    }
    for (let i = 0; i < privacy.length; i++) {
      privacy[i].classList.add('hidden');
    }
  }

  hidePrivacyContent ();
</script>

