<section class="sub-types section">
  <div class="container">
    <h2 class="section-title">{{ section.settings.sub_title }}</h2>
    <div class="sub-types__card-wrapper">
      {% for block in section.blocks %}
        <div class="sub-types__card sub-card">
          <div class="sub-types__content">
            {% if block.settings.subcard_image != blank %}
            <img src="{{ block.settings.subcard_image | img_url: 'master' }}" alt="">
            {% endif %}
            {% if block.settings.subcard_title != blank %}
            <h3 class="card-title">{{ block.settings.subcard_title }}</h3>
            {% endif %}
            {% if block.settings.subcard_text != blank %}
            <p class="card-text">{{ block.settings.subcard_text }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Sub types",
  
  "settings": [
      {
        "type": "text",
        "id": "sub_title",
        "label": "Sub title"
      }
  ],
  "blocks": [
      {
        "type": "image",
        "name": "images",
        "settings": [
          {
            "type": "image_picker",
            "id": "subcard_image",
            "label": "Subcard image"
          },
          {
            "type": "text",
            "id": "subcard_title",
            "label": "Subcard title",
            "default":"Item title"
          },
          {
            "type": "text",
            "id": "subcard_text",
            "label": "Subcard text",
            "default":"Item text"
          }
        ]
      }
  ],
  "presets": [
      {
        "name": "Sub types",
        "category": "card2"
      }
  ]
} 
{% endschema %}