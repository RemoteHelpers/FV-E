                    </div>
                    <div class="resume__slider-texts">
                        <h3 class="resume__slider-name">
                            {{ block.settings.creators__name }}
                        </h3>
                        <div class="resume__slider-button">
                            <a href="{{ block.settings.creators__link }}" class="resume__slider-link">
                                {{ block.settings.creators__button }}
                            </a>
                        </div>
                    </div>
              	</div> -->
              {% endfor %}
            </div>
            <div class="resume__button">
                <a href="{{ section.settings.creators__more-link }}" class="resume__link">
                    {{ section.settings.creators__more-text }}
                </a>
            </div>
        </div>
    </section>

{% schema %}
  {
    "name": "Portfolio Creators",
    "settings": [
		{
			"type": "text",
			"id": "creators__title",
			"label": "Creators Title"
		},
		{
			"type": "text",
			"id": "creators__more-link",
			"label": "Creators more Link"
		},
		{
			"type": "text",
			"id": "creators__more-text",
			"label": "Creators more Text"
		}
	],
	"blocks": [
	    {
            "type": "block",
            "name": "Creators item",
            "settings": [
              {
                "type": "image_picker",
                "id": "creators__image",
                "label": "Creators Image"
              },
              {
                "type": "text",
                "id": "creators__name",
                "label": "Creators Name",
                "default":"Creators Name"
              },
              {
                "type": "text",
                "id": "creators__link",
                "label": "Creators link",
                "default":"Creators link"
              },
              {
                "type": "text",
                "id": "creators__button",
                "label": "Creators button",
                "default":"Creators button"
              }
            ]
         }

	]
  }
{% endschema %}

