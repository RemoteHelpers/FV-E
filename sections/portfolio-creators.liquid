                                <div class="main-employees-item__name">{{ product.title }}</div> 
                                <div class="main-employees-item__price">{{ product.price | money }}</div>
                                <div class="main-employees-item__click">View Resume</div>

                          </a>
                        </li>
<!--                      </div>       -->
<!--                </div> -->


                  </ul>
              
       


