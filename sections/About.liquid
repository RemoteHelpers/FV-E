<div id="about" class="about shopify-section_inner">
  <style>
    .index-section.about {
    	background-color: {{section.settings.bg_color}};
    }
  </style>
  {% if section.settings.title != blank %}
    <div class="section-header text-center {{section.settings.spesific_class}}">
      <h4 class="h2">{{ section.settings.title | escape }}</h4>
    </div>
  {% endif %}
  
  <div class="custom-content flex about">
    <div class="custom__item text">
        {%- if section.settings.text_title != blank -%}
    		<h2 class="title_text">{{ section.settings.text_title }}</h2>
  		{%- endif -%}
      	<div class="text-wrapper">
      	{%- if section.settings.text_main != blank -%}
    		<p class="main_text">{{ section.settings.text_main }}</p>
  		{%- endif -%}
        {%- if section.settings.text_sub != blank -%}
    		<p class="sub_text">{{ section.settings.text_sub }}</p>
  		{%- endif -%}
      </div>
       {%- if section.settings.button_link != blank -%}
      <div class="button-wrapper">
        <a class="star-btn btn" href="{{section.settings.button_link}}" aria-label="{{section.settings.button_link}}">
        {{section.settings.button_label}}
        </a>
        <div class="star-wrapper">
          <div class="star-w star-1">
			{% include "star-img" %}
          </div>
          <div class="star-w star-2">
          	{% include "star-img" %}
          </div>
          <div class="star-w star-3">
            {% include "star-img" %}
          </div>
      </div>
        </div>
      {%- endif -%}
      
    </div>
    {% if section.settings.image != blank %}
    {%- assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
    <div class="custom__item img-wrapper">
      <img id="about__img"
                       class="custom__image about__img lazyload js"
                       data-src="{{ img_url }}"
                       data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                       data-sizes="auto"
      >
    </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
  {
	"name": "About",
	"class": "index-section about",
    "settings": [
{
	"type": "color",
    "id": "bg_color",
    "label": "Background color",
     "default": "#fff"
	},      
{
        "id": "title",
        "type": "text",
        "label": "Header",
		"default": "Header for About section"
      },
	{
		"id": "text_title",
		"type": "text",
		"label": "Text title",
		"default": "Title for description text"
	},
	{
		"id": "text_main",
		"type": "text",
		"label": "Main title",
		"default": "Main description text"
	},
	{
		"id": "text_sub",
		"type": "text",
		"label": "Sub title",
		"default": "Sub description text"
	},
	{
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"  
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link" 
    }
    ],
	"presets": [
      {
        "category": "Custom Content",
        "name": "About"
      }
    ]
  }
{% endschema %}
