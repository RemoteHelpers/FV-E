    <section class="hero" style ="background-image: url({{ section.settings.bg_img | img_url: "master" }});"  >
        <div class="container">
            <div class="hero-wrapper">
                <div class="hero-info">
                  <div class="hero-bg">
                            <img src="{{ section.settings.hero_imagemob | img_url: 'master' }}" alt="" class="hero-bg__img">
                        </div>
                    <h1 class="hero-info__title ">{{ section.settings.hero_title }}</h1>
                        
                    <p class="hero-info__text ">{{ section.settings.hero_text }}</p>
                    <div class="btn-hero"><a href="{{ section.settings.link }}" class="button hero-info__button">{{ section.settings.link_text }}</a></div>
                </div>
                
            </div>
        </div>
    </section>
{% schema %}
{
  "name": "hero",
  
  "settings": [
      {
        "type": "text",
        "id": "hero_title",
        "label": "Hero title"
      },
      {
        "type": "text",
        "id": "hero_text",
        "label": "Hero text"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link text"
      },
      {
        "type": "image_picker",
        "id": "bg_img",
        "label": "Hero image"
      },
      {
        "type": "image_picker",
        "id": "hero_imagemob",
        "label": "Hero image mob"
      },
{
        "type": "url",
        "id": "link",
        "label": "Link for button"
      }
  ]
  } 
{% endschema %}
