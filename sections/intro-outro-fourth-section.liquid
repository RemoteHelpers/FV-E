<section id="io-fourth">
    <div class="page-width">
        <h2 class="section-heading fourth-heading">{{ section.settings.heading }}</h2>
        <div class="lr-wrapper pc-ver">
            <div class="left">
                <h5 class="section-text">{{ section.settings.txt-content-1 }}</h5>
                <h5 class="section-text">{{ section.settings.txt-content-2 }}</h5>
                <h5 class="section-text">{{ section.settings.txt-content-3 }}</h5>
                <h5 class="section-text">{{ section.settings.txt-content-4 }}</h5>
                <img src="{{ section.settings.io-sec4-img2 | img_url: "master" }}" alt="img">
            </div>
            <div class="right">
                <img src="{{ section.settings.io-sec4-img1 | img_url: "master" }}" alt="img">
                <h5 class="section-text">{{ section.settings.txt-content-5 }}</h5>
                <h5 class="section-text">{{ section.settings.txt-content-6 }}</h5>
            </div>
        </div>

        <div class="lr-wrapper mobile-heading">
            <div class="left">
                <h5 class="section-text">{{ section.settings.txt-content-1 }}</h5>
                <h5 class="section-text">{{ section.settings.txt-content-2 }}</h5>
                <img src="{{ section.settings.io-sec4-img1 | img_url: "master" }}" alt="img">
                <h5 class="section-text">{{ section.settings.txt-content-3 }}</h5>
                <h5 class="section-text">{{ section.settings.txt-content-4 }}</h5>
            </div>
            <div class="right">
                <img src="{{ section.settings.io-sec4-img2 | img_url: "master" }}" alt="img">
                <h5 class="section-text">{{ section.settings.txt-content-5 }}</h5>
                <h5 class="section-text">{{ section.settings.txt-content-6 }}</h5>
            </div>
        </div>

    </div>
</section>

