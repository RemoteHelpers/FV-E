            "id": "txt-content-1",
            "label": "Text line"
        }, {
            "type": "richtext",
            "id": "txt-content-2",
            "label": "Text line"
        }, {
            "type": "richtext",
            "id": "txt-content-3",
            "label": "Text line"
        }, {
            "type": "richtext",
            "id": "txt-content-4",
            "label": "Text line"
        }, {
            "type": "image_picker",
            "id": "io-sec4-img1",
            "label": "Image"
        }, {
            "type": "image_picker",
            "id": "io-sec4-img2",
            "label": "Image"
        }, {
            "type": "richtext",
            "id": "txt-content-5",
            "label": "Text line"
        }, {
            "type": "richtext",
