{{ 'slick.min.js' | asset_url | script_tag }}

<section id="sm-second">
    <div class="page-width">
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
        <h5 class="section-text">{{ section.settings.text1 }}</h5>
        <div class="secslide-wrapper slide-wrappper">
            {% for block in section.blocks %}
                <div class="item">
                    <img src="{{ block.settings.image | img_url: 'master' }}" alt="">
                    <h3 class="item-title">{{block.settings.item_title}}</h3>
                </div>
            {% endfor %}
        </div>
        <h5 class="section-text">{{ section.settings.text2 }}</h5>
    </div>
</section>

{% schema %}
{
    "name": "VA 3rd section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        }, {
            "type": "richtext",
            "id": "text1",
            "label": "Heading"
        }, {
            "type": "richtext",
            "id": "text2",
            "label": "Heading"
        }
    ],
    "blocks": [
        {
            "type": "assist_item",
            "name": "assist_item",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                }, {
                    "type": "text",
                    "id": "item_title",
                    "label": "Item title",
                    "default": "Item title"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "Custom Content",
            "name": "Assists",
            "blocks": [
                {
                    "type": "assist_item"
                }, {
                    "type": "assist_item"
                }, {
                    "type": "assist_item"
                }
            ]
        }
    ]
}
{% endschema %}
{% stylesheet %}
{% endstylesheet %}

{% javascript %}
$(document).ready(function() {
  $('.slide-wrappper').slick({
      infinite: true,
      speed: 500,
      slidesToShow: 3,
         arrows: false,
         dots: true,
      slidesToScroll: 1,
      responsive: [{
        breakpoint: 820,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1,
        }
      }]
});
   });
{% endjavascript %} 