    <section class="hero" style ="background-image: url({{ section.settings.bg_img | img_url: "master" }});">
        <div class="hero-gradient"></div>
        <div class="container">
            <div class="hero-wrapper">
                <h1 class="hero__title">{{section.settings.hero_title}}</h1>
                <p class="hero__text"> {{section.settings.hero_text}}
                </p>
                <div class="btn-hero"><a href="{{section.settings.link}}" class="button hero__button">{{section.settings.link_text}}</a></div>
            </div>
        </div>
    </section>

    {% schema %}
{
  "name": "hero",
  
  "settings": [
      {
        "type": "text",
        "id": "hero_title",
        "label": "Hero title"
      },
        {
        "type": "text",
        "id": "hero_text", 
        "label": "Hero text"
      },
     

           {
        "type": "text",
        "id": "link_text",
        "label": "Link text"
      },

           {
        "type": "url",
        "id": "link",
        "label": "Link url"
      },
{
"type": "image_picker",
"id": "bg_img",
"label": "Background image"
}
     
  ]
  } 
{% endschema %}
